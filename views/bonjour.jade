extends layout

block head
  .container-fluid.bonjour.bonjour-head
    .row
      .col-sm-6
        p(style='margin-top: 1rem') Bienvenue au défi de l'équipe:
      .col-sm-6.text-xs-center
        img.img-fluid.img-thumbnail(src='/resources/bubblesugar.jpg', style='height: 200px')
        p.lead bubblesugar

